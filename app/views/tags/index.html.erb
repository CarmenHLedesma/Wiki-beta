<%- model_class = Tag -%>
<!-- añade el título a la url y el breadcrumb en el header -->
<% content_for :title, 'Wiki Rails Tags' %>
<% navigation_add model_class.model_name.human.pluralize.titleize, '' %>

<h1>Tags</h1>

<table class="table-responsive">
  <thead>
  <tr>
    <th>Nombre:</th>
    </br>
    <!--Se podrían añadir los posts a los que pertenecen en otra pantalla desde name?-->
    <th><% t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to t('.show', :default => t("helpers.links.show")),
                        tag_path(tag), :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_tag_path(tag), :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    tag_path(tag),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-danger' %> </td>
  <% end %>
  </tr>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tag_path,
            :class => 'btn btn-primary' %>
