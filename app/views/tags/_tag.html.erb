<%= form_for @tag do |f| %>
    <div class='form-group-tag'>
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      <br>
      <%= f.submit "Enviar", class: 'btn btn-default' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), tags_path, :class => 'btn btn-default' %>
    </div>
<%end %>
